// 盒子文本高度不需要设置,默认单行,可以传参数设置多行
g-text-overflow(line = 1) {
  overflow: hidden;
  text-overflow: ellipsis;
  /*将对象作为弹性伸缩盒子模型显示*/
  display: -webkit-box;
  /*用来限制在一个块元素中显示的文本的行数*/
  -webkit-line-clamp: line;
  /*设置伸缩盒对象的子元素的排列方式*/
  -webkit-box-orient: vertical;
   word-break: break-all; //纯英文、数字、中文
   white-space:pre-line;   
    -webkit-box-orient: vertical; //垂直
}


generic-pseudo-classes(){
  content: '';
  display: block;
  clear: both;
  position: absolute;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 100%;
}

// 用于制作有背景和渐变色的盒子,你只需要传入一个img url和渐变色和方向即可
g-bg-sandwich(imgUrl, color1, color2,direction = 'x') {
  position: relative
  z-index 10
  &:before {
    generic-pseudo-classes()
    background: url(imgUrl) no-repeat;
    background-size: cover;
    z-index: 1;
  }
  if(direction=='x') {
    $l-g=linear-gradient(to right, color1, color2);
  }
  if(direction=='y') {
    $l-g=linear-gradient(to bottom, color1, color2);
  }
  &:after {
    generic-pseudo-classes()
    background: $l-g;
    z-index: -10;
  }
}
